@page
@model ZooBazaar_ASP_NET.Pages.StaticScheduleModel
@{
    ViewData["Title"] = "Schedule";
    ViewData["TabName"] = "Schedule";
    ViewData["Css"] = "~/css/StaticSchedule.css";
}

<div id="container">
    <div class="navigation">
        <form method="post">
            @{
                if (DateTime.Now.CompareTo(new DateTime(Model.year, Model.month, 1)) > 0)
                {
                    <button disabled>&#60;</button>

                }
                else
                {
                    <button asp-page-handler="previous" asp-route-weekNumber="@(Model.weekNumber-1)" asp-route-day="@(Model.day-7)">&#60;</button>
                }
            }
            <button asp-page-handler="today">Today</button>
            <button asp-page-handler="next" asp-route-weekNumber="@(Model.weekNumber+1)" asp-route-day="@(Model.day+7)">></button>
        </form>

    </div>
    <div class="week">Week @Model.weekNumber </div>
    <div class="weekDays">
        <div>Mon <br /> @Model.firstDayOfWeek.ToString()</div>
        <div>Tue <br /> @Model.firstDayOfWeek.AddDays(1).ToString()</div>
        <div>Wed <br /> @Model.firstDayOfWeek.AddDays(2).ToString()</div>
        <div>Thu <br /> @Model.firstDayOfWeek.AddDays(3).ToString()</div>
        <div>Fri <br /> @Model.firstDayOfWeek.AddDays(4).ToString()</div>
        <div>Sat <br /> @Model.firstDayOfWeek.AddDays(5).ToString()</div>
        <div>Sun <br /> @Model.firstDayOfWeek.AddDays(6).ToString()</div>
    </div>
    <form method="post" class="schedule">
        @{
            <div>
            @{
                for (int i = Model.startingHour; i <= Model.closingHour; i++)
                {
                    <div class="hour">@(i):00 </div>
                }
            }
            </div>
            for (int i = 0; i < 7; i++)
            {
                <div class="day">
                @{
                for (int j = Model.startingHour; j <= Model.closingHour; j++)
                {
                    if(Model.schedule[i][j] != null && Model.schedule[i][j].timeBlockId == j)
                    {
                        <button asp-page-handler="Delete" asp-route-weekDay="@i" asp-route-timeBlock="@j" class="timeBlock">@Model.schedule[i][j].taskName - @Model.schedule[i][j].taskHabitat</button>
                    }
                    else
                    {
                        <button asp-page-handler="Create" asp-route-weekDay="@i" asp-route-timeBlock="@j" class="timeBlock"></button>
                    }
                }
                }
                </div>
            }
        }
    </form>
    <div class="actionPanel">

    </div>
</div>